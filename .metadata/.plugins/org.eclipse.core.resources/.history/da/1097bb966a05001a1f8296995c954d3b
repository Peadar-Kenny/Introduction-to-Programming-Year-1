	public static void main(String[] args) {
		final int MAX_VERSES = 12;
		final String VERSE_INTRO = "\nMy true love gave to me: ";
		final String FIRST_VERSE_INITIAL = "\nA partridge in a pear tree. ";
		final String FIRST_VERSE = "\nAnd a partridge in a pear tree. ";
		final String SECOND_VERSE = "\nTwo turtle doves, ";
		final String THIRD_VERSE = "\nThree French hens, ";
		final String FOURTH_VERSE = "\nFour calling birds, ";
		final String FIFTH_VERSE = "\nFive gold rings, ";
		final String SIXTH_VERSE = "\nSix geese a-laying, ";
		final String SEVENTH_VERSE = "\nSeven swans a-swimming, ";
		final String EIGHTH_VERSE = "\nEight maids a-milking, ";
		final String NINTH_VERSE = "\nNine ladies dancing, ";
		final String TENTH_VERSE = "\nTen lords a-leaping, ";
		final String ELEVENTH_VERSE = "\nEleven pipers piping, ";
		final String TWELFTH_VERSE = "\nTwelve drummers drumming, ";
		 
		for (int versesRead = 1; versesRead <= MAX_VERSES; versesRead++) {
			System.out.print("\n" + versesRead + ". ");
			switch (versesRead) {
			case 1: 
				System.out.print("On the first day of Christmas " + VERSE_INTRO + FIRST_VERSE_INITIAL);
				break;
			case 2:
				System.out.print("On the second day of Christmas " + VERSE_INTRO + SECOND_VERSE + FIRST_VERSE);
				break;
			case 3:
				System.out.print("On the third day of Christmas " + VERSE_INTRO + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 4:
				System.out.print("On the fourth day of Christmas " + VERSE_INTRO + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 5:
				System.out.print("On the fifth day of Christmas " + VERSE_INTRO + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 6:
				System.out.print("On the sixth day of Christmas " + VERSE_INTRO + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 7:
				System.out.print("On the seventh day of Christmas " + VERSE_INTRO + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 8:
				System.out.print("On the eighth day of Christmas " + VERSE_INTRO + EIGHTH_VERSE + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 9:
				System.out.print("On the nineth day of Christmas " + VERSE_INTRO + NINTH_VERSE + EIGHTH_VERSE + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 10:
				System.out.print("On the" + day + "day of Christmas " + VERSE_INTRO + TENTH_VERSE + NINTH_VERSE + EIGHTH_VERSE + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			case 11:
				System.out.print("On the" + day + "day of Christmas " + VERSE_INTRO + ELEVENTH_VERSE + TENTH_VERSE + NINTH_VERSE + EIGHTH_VERSE + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			default:
				System.out.print("On the" + day + "day of Christmas " + VERSE_INTRO + TWELFTH_VERSE + ELEVENTH_VERSE + TENTH_VERSE + NINTH_VERSE + EIGHTH_VERSE + SEVENTH_VERSE + SIXTH_VERSE + FIFTH_VERSE + FOURTH_VERSE + THIRD_VERSE + SECOND_VERSE + FIRST_VERSE);
				break;
			}
			
		}
		
		

	}

}
