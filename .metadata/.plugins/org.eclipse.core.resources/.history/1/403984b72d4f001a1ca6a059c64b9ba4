		while (finished!=true) {
			System.out.println("Please select which type of bet you want to make: (triple, high, low, field). Or type 'quit'");
			String bet = input.next();
			if(bet == "quit") {
				finished = true;
			}else {
				resolveBet(bet, wallet);
			}
		}
	}
